generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(uuid())
  userId       String       @unique
  userpassword String
  nickname     String       @default("야옹이")
  createdAt    DateTime     @default(now())
  gamerecords  gameRecord[]
}

model gameRecord {
  id        String   @id @default(uuid())
  win       Boolean  @default(true)
  kill      String   @default("0")
  death     String   @default("0")
  createdAt DateTime @default(now())
  user      User     @relation(fields: [nickname], references: [id], onDelete: Cascade)
  nickname  String
}
